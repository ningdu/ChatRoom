@model ChatRoom.Models.ChatPanel


@{
    ViewBag.Title = "Index";
}



<div class="Table">
   
    @foreach (var item in Model.Chats)
    {
     <div class="Row">
        <div class="Cell" style="clear:left; font-size:larger; font-weight:bold">
            @Html.DisplayFor(modelItem => item.UserID)
        </div>
        <div class="Cell">
            @Html.DisplayFor(modelItem => item.Time)
        </div>
    </div>
    <div class="Row">
        <div class="Cell  thin" style="width:90%; font-size:larger">
            @Html.DisplayFor(modelItem => item.Message)
        </div>
    </div>
    }
</div>


<style type="text/css">
    .Table
    {
        background-color:antiquewhite;
        height:300px;      
        overflow:scroll;
    }
  
    .Row{
        border-left:solid;
        border-right:solid;
    }
    .Cell
    {
        padding-left:5px;
        padding-right:5px;
        padding-top:5px;
        padding-bottom:5px;
        width: 45%;
        float:left;
    }

    .underline {
        border-bottom:solid;
    }

    .thin {
        border-bottom-width:thin;
        border-bottom-style:solid;
        border-color:white;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Chat</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewChat.Message)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewChat.Message)
            @Html.ValidationMessageFor(model => model.NewChat.Message)
        </div>

        <p>
            <input type="submit" value="Post" />
        </p>
    </fieldset>
}
